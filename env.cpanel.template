# PRODUCTION Environment Configuration
# Copy this file to .env and update with your actual values

# ========================================
# APPLICATION SETTINGS
# ========================================
APP_NAME="AndCorp Car Dealership"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Get these from cPanel â†’ MySQL Databases
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_cpanel_username_dbname
DB_USERNAME=your_cpanel_username_dbuser
DB_PASSWORD=your_strong_password_here

# ========================================
# EMAIL CONFIGURATION (Optional)
# ========================================
# For sending notifications to customers
MAIL_HOST=mail.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="AndCorp Car Dealership"

# ========================================
# SMS CONFIGURATION (Optional)
# ========================================
# Twilio for SMS notifications
SMS_ENABLED=false
TWILIO_SID=your_twilio_sid
TWILIO_TOKEN=your_twilio_token
TWILIO_FROM=+1234567890

# ========================================
# SESSION CONFIGURATION
# ========================================
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict

# ========================================
# SECURITY SETTINGS
# ========================================
# Set to false in production
DISPLAY_ERRORS=false
LOG_ERRORS=true

# ========================================
# FILE UPLOAD SETTINGS
# ========================================
MAX_UPLOAD_SIZE=20971520
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ========================================
# API KEYS (Optional)
# ========================================
# If integrating with external services
GOOGLE_MAPS_API_KEY=
STRIPE_API_KEY=
PAYSTACK_PUBLIC_KEY=
PAYSTACK_SECRET_KEY=

# ========================================
# MAINTENANCE MODE
# ========================================
MAINTENANCE_MODE=false

